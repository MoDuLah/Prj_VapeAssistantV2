<UserControl x:Class="Vape_Assistant.ucCalendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vape_Assistant"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ComboBox Grid.Column="0" Height="30" HorizontalAlignment="Center" Margin="0,0,5,0" x:Name="cmbYear" MinWidth="100" SelectionChanged="cmbYear_SelectionChanged" VerticalContentAlignment="Center" />
        <ComboBox Grid.Column="1" Height="30" HorizontalAlignment="Center" Margin="5,0,5,0" x:Name="cmbMonths" MinWidth="100" SelectionChanged="cmbMonths_SelectionChanged" VerticalContentAlignment="Center"/>
        <ComboBox Grid.Column="2" Height="30" HorizontalAlignment="Center" Margin="5,0,0,0" x:Name="cmbDays" MinWidth="100" VerticalContentAlignment="Center" />
    </Grid>
</UserControl>
